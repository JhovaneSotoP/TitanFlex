<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".reproducir_a_Fragment"
    >

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <TextView
          android:id="@+id/tvTituloReproducirA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Selecciona un ejercicio:"
          style="@style/text_titulo"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_margin="20dp"/>
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginTop="20dp"
          app:layout_constraintTop_toBottomOf="@id/tvTituloReproducirA"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="@id/btsReproucirA">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReproducirA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/btReproducirA_agregar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/rvReproducirA"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Agregar ejercicio"
                android:layout_marginTop="10dp"
                style="@style/boton_a_activo"
                android:background="@drawable/boton_b_degradado"
                android:layout_margin="5dp"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </ScrollView>
      <LinearLayout
          android:id="@+id/btsReproucirA"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent">
         <Button
             android:id="@+id/btSalirReproducir_A"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Salir"
             style="@style/boton_a_activo"
             android:background="@drawable/boton_b_degradado"
             android:layout_margin="5dp"/>
         <Button
             android:id="@+id/btTerminarReproducir_A"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Terminar"
             style="@style/boton_a_activo"
             android:background="@drawable/boton_a_degradado"
             android:layout_margin="5dp"/>
      </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>