<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".reproducir_b_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btsReproducirB">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMultimediaReproducirB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/no_hay_imagen"/>
                <TextView
                    android:id="@+id/tvNombreReproducirB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Lagartijas"
                    style="@style/text_titulo"
                    app:layout_constraintTop_toBottomOf="@id/rvMultimediaReproducirB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTitulosReproducirB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvNombreReproducirB">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Serie"
                            style="@style/text_subtitulo"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="RepeticiÃ³n"
                            style="@style/text_subtitulo"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Peso"
                            style="@style/text_subtitulo"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReproducirB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/cvTitulosReproducirB"
                    app:layout_constraintEnd_toEndOf="@id/cvTitulosReproducirB"
                    app:layout_constraintTop_toBottomOf="@id/cvTitulosReproducirB"/>
                <Button
                    android:id="@+id/btAgregarSerie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar serie"
                    app:layout_constraintTop_toBottomOf="@id/rvReproducirB"
                    app:layout_constraintStart_toStartOf="@id/rvReproducirB"
                    app:layout_constraintEnd_toEndOf="@id/rvReproducirB"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/btsReproducirB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <Button
                android:id="@+id/btOmitirReproducir_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Omitir"/>
            <Button
                android:id="@+id/btContinuarReproducir_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Continuar"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>