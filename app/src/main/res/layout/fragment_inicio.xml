<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InicioFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ejerciciosHoy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/text_titulo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ejercicios"
                            style="@style/text_normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/RepeticionesHoy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/text_titulo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Repeticiones"
                            style="@style/text_normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/volumenHoy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/text_titulo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Volumen"
                            style="@style/text_normal"/>
                    </LinearLayout>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/contenedor_semanal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/contenedor_semanal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resumen Semanal"
                            style="@style/text_subtitulo"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/domingoCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal"
                                android:clickable="false">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="DO"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/domingoDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/lunesCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="LU"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/lunesDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/martesCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MA"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/martesDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/miercolesCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MI"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/miercolesDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/juevesCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="JU"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/juevesDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/viernesCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="VI"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/viernesDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/sabadoCV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/itemsemanal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SA"
                                        style="@style/text_a_itemsemanal"/>
                                    <TextView
                                        android:id="@+id/sabadoDia"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        style="@style/text_b_itemsemanal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rutina recomendadas"
                    style="@style/text_subtitulo"
                    android:layout_marginBottom="5dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRutinasRecomendadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>